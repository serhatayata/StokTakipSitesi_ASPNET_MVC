@model StokTakipSitesi_ASPNET_MVC.Models.Entity.Tbl_Urunler

@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UrunGuncelle", "Urunler", FormMethod.Post))
{

<div class="form-group">
    <label>Ürün ID :</label>
    @Html.TextBoxFor(m => m.URUNID, new { @readonly= "readonly form", @class="form-control" })
</div>
<div class="form-group">
    <label>Ürün Ad :</label>
    @Html.TextBoxFor(m => m.URUNAD, new { @class = "form-control" })
</div>
<div class="form-group">
    <label>Marka :</label>
    @Html.TextBoxFor(m => m.URUNMARKA, new { @class = "form-control" })
</div>
<div class="form-group">
    <label>Kategori :</label>
    @*@Html.TextBoxFor(m => m.URUNKATEGORI, new { @class = "form-control" })*@
    @Html.DropDownListFor(m=>m.Tbl_Kategoriler.KATEGORIID,(List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
</div>
<div class="form-group">
    <label>Fiyat :</label>
    @Html.TextBoxFor(m => m.URUNFIYAT, new { @class = "form-control" })
</div>
<div class="form-group">
    <label>Stok :</label>
    @Html.TextBoxFor(m => m.URUNSTOK, new { @class = "form-control" })
</div>
<div class="form-group">
    <button class="btn btn-info">
        Güncelle
    </button>
</div>

}

