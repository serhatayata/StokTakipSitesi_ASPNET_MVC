@using StokTakipSitesi_ASPNET_MVC.Models.Entity

@model List<Tbl_Urunler>
@{
    ViewBag.Title = "UrunlerListesi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h2>Ürünler Listesi</h2>
<table class="table table-bordered" id="tbl1">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Silme</th>
            <th>Güncelleme</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.URUNID</th>
                <td>@urn.URUNAD</td>
                <td>@urn.URUNMARKA</td>
                <td>@urn.Tbl_Kategoriler.KATEGORIAD</td>
                <td>@urn.URUNFIYAT</td>
                <td>@urn.URUNSTOK</td>
                <td>@Html.ActionLink("SİL", "UrunSil", new { id = urn.URUNID }, new { @class = "btn btn-block btn-warning", onclick = "return confirm('Silmek istediğinize emin misiniz?')" })</td>
                <td><a href="/Urunler/UrunGetir/@urn.URUNID" class="btn btn-success btn-block">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urunler/YeniUrun" class="btn btn-primary">Yeni Ürün Ekle</a>

<script type="text/javascript" src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });
</script>

