@model StokTakipSitesi_ASPNET_MVC.Models.Entity.Tbl_Kategoriler
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        <label>KATEGORİ ID</label>
        @Html.TextBoxFor(m => m.KATEGORIID, new { @readonly = "readonly form", @class = "form-control" })
        <br />
        <label>KATEGORİ AD</label>
        @Html.TextBoxFor(m=> m.KATEGORIAD,new { @class = "form-control" })
        <br />
        <button class="btn btn-info">
            Güncelle
        </button>
    </div>
}
