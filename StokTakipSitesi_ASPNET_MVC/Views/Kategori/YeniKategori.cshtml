@model StokTakipSitesi_ASPNET_MVC.Models.Entity.Tbl_Kategoriler
@{
    ViewBag.Title = "YeniKategori";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group-lg" method="POST">
    @*<div class="form-group">
        <label>Kategori Adı : </label>
        <input type="text" class="form-control" name="KATEGORIAD"/>
    </div>*@
    <div class="form-group">
        <label>Kategori Adı :</label>
        @Html.TextBoxFor(m=> m.KATEGORIAD,new { @class = "form-control"})
        @Html.ValidationMessageFor(m=>m.KATEGORIAD,"",new { @style = "color:red; font-weight:bold" })
    </div>
    <div class="form-group">
        <button class="btn-lg btn-info" id="btn1">
